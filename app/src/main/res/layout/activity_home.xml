<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/robot"
    tools:context=".home">

    <TextView
        android:id="@+id/homehead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The KING App All In One"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textColorHighlight="#000000"
        android:textStyle="bold"
        android:background="#000000"
        app:layout_constraintBottom_toTopOf="@+id/jum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/amazon"
        android:layout_width="171dp"
        android:layout_height="180dp"
        android:adjustViewBounds="false"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bbc"
        app:layout_constraintTop_toBottomOf="@+id/jum"
        app:srcCompat="@drawable/amazon" />

    <ImageView
        android:id="@+id/bbc"
        android:layout_width="172dp"
        android:layout_height="180dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/amazon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kyu"
        app:srcCompat="@drawable/bbc" />

    <ImageView
        android:id="@+id/jum"
        android:layout_width="170dp"
        android:layout_height="179dp"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/amazon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/kyu"
        app:layout_constraintTop_toBottomOf="@+id/homehead"
        app:srcCompat="@drawable/jumia" />

    <ImageView
        android:id="@+id/kyu"
        android:layout_width="169dp"
        android:layout_height="177dp"
        android:clickable="true"
        android:cropToPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/bbc"
        app:layout_constraintEnd_toStartOf="@+id/jum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homehead"
        app:srcCompat="@drawable/kp" />
</androidx.constraintlayout.widget.ConstraintLayout>